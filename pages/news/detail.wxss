/* pages/news/detail.wxss */
@import "/utils/quill_core.wxss";
.content{
  width: 90%;margin: 10px 5%;line-height: 24px;}
.info{
  margin-bottom: 30px;
}
.title{
  font-size: 16px;font-weight: bold;display: block;text-align: center;margin-bottom: 10px;
}
.time{
  display: block;text-align: right;
  font-size: 12px;color: #666;
}
video{
  width: 100%;
}
.cover-bg,swiper,.banner-warp{width: 100%;height: 100vh;position: relative;}
swiper image{
  width: 100%;
}
.small-text{
  font-size: small;
}
swiper{
  width: calc(100% - 40px);
  margin-left: 20px;
}
swiper-item{
  padding-left:20px;box-sizing: border-box;
}
.footer-author{
  margin-top: 30px;
  float: right;
}

