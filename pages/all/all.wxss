.session{padding-left: 30rpx;padding-right: 30rpx;}
.tab{background: #f4f7fc;font-size: 14px;padding: 15rpx 25rpx;margin-right: 30rpx;margin-bottom: 20rpx;border-radius: 2em;}
.tab.active{color: #d81e06;}
.flex{align-items: stretch;}
.item-5{padding: 30rpx;box-sizing: border-box;padding-top: 0;}
