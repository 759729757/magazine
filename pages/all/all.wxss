.item-5:nth-child(2n+2){padding-left: 15rpx;}
.item-5 .shadow{padding-bottom: 40rpx;height: 100%;box-sizing: border-box;}
.text-sm{padding: 10rpx;box-sizing: border-box;}
.describe{
  font-size: 14px;padding: 10rpx;box-sizing: border-box;min-height: 3.4em;
}


